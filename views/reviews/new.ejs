<div id="saved_section" style="margin-left: 3vw">
    <h4>Post a review for <%= activity.type %>:</h4>
    <h5>"<%= activity.activity %>"</h5>
    
    <div style="margin-left: 20vw">
        <form method="POST" action="/reviews/<%=user.id%>/<%=activity.id%>" class="row g-3" style="width:50rem">
            <div class="col-12">
                    <label>Review:</label>
                    <input hidden value="<%=activity.userId%>" name="userId">
                    <input class="form-control" type="text" name="title" placeholder="write a review" required>
                </div>
                    <div class="col-md-6">
                    <label>Rating (1-5)</label>
                    <select class="form-control" name="rating" required>
                        <option value="5" selected>5</option>
                        <option value="4">4</option>
                        <option value="3">3</option>
                        <option value="2">2</option>
                        <option value="1">1</option></select>
                    </div>
                    <div class="col-md-6">
                        <label for="resource">Resource (optional):</label>
                        <input class="form-control" name="resource" type="text" placeholder="any helpful resources">
                    </div>
                  <div class="col-12">
                    <label>Details (optional)</label>
                    <textarea class="form-control" name="content" placeholder="additional details"></textarea>
                </div>
                <div class="col-12 d-flex justify-content-center">
                    <button class="btn btn-info" type="submit">Post</button>
                </div>
            </div>
        </form>
    </div>
</div>