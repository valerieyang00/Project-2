<head>
    <style>
        body {
            background-image: url("../image.jpg");
            background-color: #FFFFFF;
            height: 100vh;
        }
    </style>
</head>   


<nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid" style="margin-left: 2vw">
        <div class="navbar-brand">
        <div class="nav">
        <small><a href="/reviews/all">Back to All Reviews</a></small>
        </div>
    </div>
   
        <li class="nav-link">
            <div class=" d-flex justify-content-end">
                <a class="btn" role="button" href="/reviews/users/<%=user.id%>" style="margin-left:1em"><strong>My Reviews</strong><span class="badge text-bg-warning" style="margin-left:0.2em">
                    <%= userRecs %>
                </span></a>
            </div>
        </li>
    </div>
</nav>



    <div id="saved_section">
         <% if(user) {%>
            <% recs.forEach(rec=> {%>
                <div class="d-flex justify-content-center">
                    <div class="card" style="width: 50vw;">
                        <div class="card-header">
                            <h5>
                                "<%= rec.activity.activity%>" 
                                <small class="d-flex justify-content-end text-muted">
                                    Posted by: <%= user.name%></small>
                            </h5>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <h5>
                                    "<%= rec.title%>" (rating: <%=rec.rating%>) 
                                </h5> 
                            <small class="card-text" style="margin-left: 2rem">
                                <%= rec.resource%> <br></small>
                            <small class="card-text" style="margin-left: 2rem">
                                <%= rec.content%>
                            </small>      
                                <div class="d-flex justify-content-end">
                                      <cite title="date">
                                          <small class="text-muted"> 
                                          <%=  moment(rec.createdAt).fromNow()%></small> 
                                      </cite>                                
                                </div>
                            </div>
                            
                            <div class="card-footer" style="height: 3rem">
                            <form method="POST" action ="/reviews/users/<%= rec.userId%>/<%=rec.activityId%>?_method=DELETE">
                          <button class="btn btn-danger btn-sm" type="submit">delete review</button>
                            </form>
                            </div>
                            <%})}%>
                    </div>
                </div>
                    </div>
                </div>