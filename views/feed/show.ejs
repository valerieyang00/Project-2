     

    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <div class="d-flex justify-content-start">
                <h3 style="margin-left: 2vw">MeetUp</h3>
                 <a class="navbar-brand" style="margin-left: 2rem">Search By City:</a>
                    <form method="GET" action="/feed/all?city=" role="search" class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="city">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                  </form>
            </div>
              <li class="nav-link">
                <div class="d-flex justify-content-end">
                    <a class="btn" role="button" href="/feed/users/<%=user.id%>"><strong>My Posts</strong><span class="badge text-bg-warning">
                        <%=userFeeds%>
                    </span></a>
                </div>
            </li>
        </div>
    </nav>
    
  <div id="content" style="margin-top: 3vh;">
         <% feeds.forEach(feed => {%>
          <div class="card" style="width: 50vw;">
              <div class="card-body">
                <h5 class="card-title">"<%= feed.activity.activity%>" Status:"<%= feed.status%>"</h5>
                <h6 class="card-subtitle mb-2 text-muted">Location: <%= feed.user.city%>, <%= feed.user.state%> <br># of People: <%= feed.activity.participants%></h6>
                <p class="card-text"><%= feed.content%></p>
                <a href="#" class="card-link">Card link</a>
                <a href="#" class="card-link">Another link</a>
                <small class="text-muted">Posted by: <%= feed.user.name%> (<%= moment(feed.createdAt).fromNow()%>)</small>
              </div>
            </div>
          <% comments.forEach(comment => {%>
              <% if(feed.id === comment.feedId) { %>
                  <%=comment.user.name%>: <%=comment.content%>
              <%}%>
          
          <%})%>
          <form method="POST" action="/feed/comments/<%=feed.id%>" class="form-inline">
              <input hidden value="<%=user.id%>" name="userId">
              <label for="content"><%=user.name%>:</label>
              <input name="content" type="text" placeholder="leave a comment">
              <button type="submit">submit</button>
          </form>
          <%})%>

  </div>
    
  